{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es6"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false,
    "useCache": true
  }
}
